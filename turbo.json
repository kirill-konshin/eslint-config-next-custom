{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["tsconfig.json"],
  "tasks": {
    "start": {
      "persistent": true,
      "cache": false,
      "dependsOn": ["^wait", "build:index"]
    },
    "build": {
      "outputs": ["dist/**/*"],
      "dependsOn": ["^build", "build:index"]
    },
    "build:index": {
      "outputs": ["src/index.ts"]
    },
    "wait": {
      "cache": false
    },
    "//#lint:all": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
